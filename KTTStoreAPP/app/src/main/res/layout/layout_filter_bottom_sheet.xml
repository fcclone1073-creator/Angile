<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg_rounded_card">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bộ lọc"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sắp xếp theo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerSort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Khoảng giá"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <EditText
            android:id="@+id/etMinPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Từ"
            android:inputType="number"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginEnd="8dp"/>

        <EditText
            android:id="@+id/etMaxPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Đến"
            android:inputType="number"
            android:background="@drawable/bg_edittext"
            android:padding="12dp"
            android:layout_marginStart="8dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trạng thái kho"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>

    <RadioGroup
        android:id="@+id/rgStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <RadioButton
            android:id="@+id/rbAllStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tất cả"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/rbInStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Còn hàng"/>

        <RadioButton
            android:id="@+id/rbOutOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hết hàng"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/cbPromotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chỉ hiển thị sản phẩm có khuyến mãi"
        android:layout_marginBottom="24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnReset"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ĐẶT LẠI"
            android:textColor="@color/black"
            android:background="@drawable/bg_edittext"
            android:layout_marginEnd="8dp"
            app:backgroundTint="@null"/>

        <Button
            android:id="@+id/btnApply"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Áp dụng"
            android:textColor="@color/white"
            android:background="@drawable/bg_button"
            android:layout_marginStart="8dp"
            app:backgroundTint="@null"/>
    </LinearLayout>

</LinearLayout>
